{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ document.description }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td><a href="/images/doc/{{ document.file }}"><button class="big_form">View brochure (PDF)</button></a></td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ document.created ? document.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ document.updated ? document.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

   <a href="{{ path('document_edit', {'id': document.id}) }}">edit</a>

    {{ include('admin/document/_delete_form.html.twig') }}
{% endblock %}
