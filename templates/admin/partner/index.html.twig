{% extends 'subsubbase.html.twig' %}

{% block title %}Overzicht van partners{% endblock %}

{% block body %}
    <section class="nieuwsOverzicht">
        <div class="container text-center" >
            <div class="title">
                <div class="row justify-center-md-center">
                    <div class="col-md-12 col-lg-12 col-sm-6 ">
                        <h2>Beheer</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="nieuwsberichten">
        <div class="container" >
            <div class="row justify-center-md-center">

                <a href="{{ path('beheerNieuws') }}"><button>Nieuws</button></a>
                <a href="{{ path('beheerPartners') }}"><button>Partners</button></a>
                <a href="{{ path('beheerInformatie') }}"><button>Informatie</button></a>
                <a href="{{ path('beheerContacten') }}"><button>Contacten</button></a>
            </div>
            <div class="title beheerPortal">
                <div class="container text-center" >
                    <div class="row justify-center-md-center">
                        <div class="col-md-12 col-lg-12 col-sm-6 ">
                            <h2>Partners</h2></div></div></div>
            </div>

            <a href="{{ path('partner_new') }}"><button class="beheer">Toevoegen</button></a>
        </div>
    </section>
    <div class="container " >
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Website</th>
                <th>Logo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td><a href="{{ path('partner_show', {'id': partner.id}) }}">{{ partner.name }}</a></td>
                <td>{{ partner.website }}</td>
                <td><div class="beheer"><img src="/public/{{  vich_uploader_asset(partner, 'imageFile') }}" alt="{{ partner.name }}" /></div></td>
                <td>
                    <a href="{{ path('partner_edit', {'id': partner.id}) }}"><i class="fa fa-pencil fa-fw" aria-hidden="true">&nbsp;edit</i></a><br />
                   <a href="{{ path('partner_delete', {'id': partner.id}) }}" onclick="return confirm('Weet u zeker dat u dit item wilt verwijderen?');"><i class="fa fa-trash " aria-hidden="true">&nbsp;delete</i></a>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Geen partners gevonden!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
