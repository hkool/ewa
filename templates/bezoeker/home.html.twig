{%  extends 'base.html.twig' %}

{% block headerintro %}
<div class="page-header clear-filter">
    <img src="images/EWAHaaglanden_bg.jpg" alt="EWA Haaglanden">
</div>
<section class="intro">
    <div class="container text-center" >
        <div class="row justify-center-md-center">
            <div class="col-md-12 col-lg-12 col-sm-6 ">
                <h2>Introductie Ewa Haaglanden</h2>
                <p>Ewa Haaglanden is een samenwerkingsverband tussen bedrijven, gemeente,
                    ROC Mondriaan en andere partijen in de regio Haaglanden. Binnen Ewa H
                    aaglanden willen we samen jonge mensen zonder diploma begeleiden,
                    opleiden en doorschakelen naar een diploma Ã©n een fijne werkplek.
                    We willen kandidaten binnen bedrijven verder opleiden. En we willen
                    kandidaten met relevante scholing dichter bij een baan en participatie brengen.</p>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block video %}
<!--    start youtube video-->
<section class="video" >
    <div id="VideoSection" style>
        <div class="container" style="text-align: center; padding-bottom:5%;">
            <h2 class="title" >Ewa Haaglanden in 3 minuten</h2>
            <div class="embed-responsive embed-responsive-16by9">
                <iframe
                        class="embed-responsive-item"
                        src="https://www.youtube.com/embed/bsPkTBn0s7I"
                        allowfullscreen
                ></iframe>
            </div>
        </div>
    </div>
</section>
<!--    einde video -->
{% endblock %}
 {% block nieuws %}
     <!--    start drie nieuwsberichten -->
     <section class="nieuws">
         <div class="container text-center" >
             <div class="row justify-center-md-center">
                 <div class="col-md-12 col-lg-12 col-sm-6 ">
                     <h2>Laatste berichten</h2>
                     <div class="container">
                         <div class="card-deck">
                         {% for nieuws in nieuwsberichten %}
                         <div class="card col-sm-12 col-lg-3 col-sm-6 ">
                             <img class="card-img-top" src="images/news/{{ nieuws.image}}" alt="Card image cap">
                             <div class="card-img-overlay">
                                 <h5 class="card-title">{{nieuws.title}}</h5>
                                 <p class="card-text"><small class="text-muted"><a href="{{ path('showNieuwsdetail', {id: nieuws.id}) }}">Lees meer...</a></small></p>
                             </div>
                         </div>
                         {% endfor %}
                     </div>
                  </div>
                 </div>
             </div>
         </div>
     </section>
     <!--    einde drie nieuwsberichten -->
 {% endblock %}
{% block contact %}
<!--    begin contactformulier -->
<section class="contact" >
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="contactIntro text-center">
                <h2 class="title" >Wilt u meer weten over Ewa Haaglanden en de mogelijkheden voor uw organisatie?</h2>
                <p
                        class="description"
                        style="color:black; margin-bottom:2.5%"
                >Neem dan vrijblijvend contact met ons op</p>
            </div>
            <!--routing naar contact mailen-->
            {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                <div class="row">
                    <div class="col-lg-12 ml-auto mr-auto col-md-12">
                        {{ form_errors(form) }}
                    </div>
                        <div class="col-lg-12 ml-auto mr-auto col-md-12">
                            <div class="row">
                                {{ form_label(form.name, 'Naam',{
            'label_attr' :{'class': "col-sm-2 col-form-label" }}) }}
                                <div class="col-sm-10">
                                {{ form_widget(form.name, {'attr': {'class': 'big_form', 'placeholder':"Naam... "}}) }}
                                {{ form_row(form.name) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 ml-auto mr-auto col-md-12">
                            <div class="row">
                           {{ form_label(form.email, 'E-mail',{
            'label_attr' :{'class': "col-sm-2 col-form-label" }}) }}
                                <div class="col-sm-10">
                            {{ form_widget(form.email, {'attr': {'class': 'big_form', 'placeholder':"E-mail..."}}) }}
                            {{ form_row(form.email) }}
                            </div>
                        </div>
                    </div>
                     <div class="col-lg-12 ml-auto mr-auto col-md-12">
                    <div class="row">
                        {{ form_label(form.message, 'Bericht',{
            'label_attr' :{'class': "col-sm-2 col-form-label" }}) }}
                        <div class="col-sm-10">
                        {{ form_widget(form.message, {'attr': {'class': 'big_form'}}) }}
                        {{ form_row(form.message) }}
                        </div>
                    </div>
                    </div>
                    <div class="col-lg-12 ml-auto mr-auto col-md-12" style="margin-bottom:2%; margin-top:2%;text-align: center">

                        {{ form_row(form.subscribed) }}

                    </div>
                </div>
            </div>
        </div>
        <div style="margin-bottom:2%; margin-top:2%;text-align: center">
                        {{ form_row(form.save) }}
                        {{ form_widget(form.save, {'attr': {'class': 'linedthin'}}) }}
        </div>
    </div>
    {{ form_end(form) }}
    </div>
    </div>
    </div>
</section>
<!-- einde contactformulier-->
{% endblock %}



{% block partners %}
<!--    begin partners slider-->
<section class="nieuwsOverzicht">
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="contactIntro text-center">
                <h2 class="title" >ONZE PARTNERS</h2></div></div></div></section>
    <div class="fotocontainer">
        <div class="photobanner">
            {%  set first=true %}
            {% for partner in partners %}

                {% if first == true  %}
                    <img class="first" src="{{  vich_uploader_asset(partner, 'imageFile') }}" alt="{{ partner.name }}" />>
                    {% set first= false %}
                {%  else %}
                    <img src="{{  vich_uploader_asset(partner, 'imageFile') }}" alt="{{ partner.name }}" />>
                {%  endif %}

            {% endfor %}
        </div>
    </div>

<!--    einde partners slider-->


{% endblock  %}